# Fedha Backend Environment Variables
# Copy this file to .env and update with your actual values

# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (SQLite is default, uncomment for PostgreSQL/MySQL)
# DATABASE_URL=postgresql://user:password@localhost:5432/fedha
# DATABASE_URL=mysql://user:password@localhost:3306/fedha

# CORS Settings for Flutter app
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# API Settings
API_VERSION=v1
API_RATE_LIMIT=1000/hour

# Email Settings (for notifications)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Security Settings
SECURE_SSL_REDIRECT=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True

# Logging
LOG_LEVEL=INFO

# Development/Production flag
ENVIRONMENT=development
